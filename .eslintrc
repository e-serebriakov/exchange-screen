{
  "parser": "babel-eslint",
  "extends": "airbnb",
  "globals": {
    "window": true,
    "document": true,
    "__dirname": true
  },
  "rules": {
    "react/jsx-filename-extension": [
      2,
      {
        "extensions": [
          ".js"
        ]
      }
    ],
    "operator-linebreak": [
      "error",
      "after"
    ],
    "react/destructuring-assignment": [
      0,
      "always"
    ],
    "react/sort-comp": [
      1,
      {
        "order": [
          "static-methods",
          "lifecycle",
          "everything-else",
          "^render.+$"
        ]
      }
    ],
    "max-len": [
      2,
      100,
      2,
      {
        "ignoreUrls": true,
        "ignoreComments": false,
        "ignoreRegExpLiterals": true,
        "ignoreStrings": true,
        "ignoreTemplateLiterals": true
      }
    ],
    "react/jsx-one-expression-per-line": [
      0
    ],
    "prefer-destructuring": [
      0
    ]
  }
}