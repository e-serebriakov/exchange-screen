{
  "parser": "babel-eslint",
  "extends": "airbnb",
  "globals": {
    "window": true,
    "document": true,
    "__dirname": true,
    "SyntheticEvent": true,
    "SyntheticInputEvent": true
  },
  "env": {
    "node": true,
    "browser": true,
    "commonjs": true,
    "es6": true
  },
  "rules": {
    "react/jsx-filename-extension": [
      2,
      {
        "extensions": [
          ".js"
        ]
      }
    ],
    "react/prop-types": 0,
    "operator-linebreak": [
      "error",
      "after"
    ],
    "react/destructuring-assignment": [
      0,
      "always"
    ],
    "react/sort-comp": [
      1,
      {
        "order": [
          "static-methods",
          "lifecycle",
          "everything-else",
          "^render.+$"
        ]
      }
    ],
    "max-len": [
      2,
      100,
      2,
      {
        "ignoreUrls": true,
        "ignoreComments": false,
        "ignoreRegExpLiterals": true,
        "ignoreStrings": true,
        "ignoreTemplateLiterals": true
      }
    ],
    "arrow-parens": [2, "always"],
    "react/jsx-one-expression-per-line": [0],
    "prefer-destructuring": [0],
    "react/require-default-props": [0],
    "react/default-props-match-prop-types": [0]
  }
}